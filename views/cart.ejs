<%- include('./partials/header') %>
    <div class="w-full h-screen flex   p-20 gap-2">
        <div class="w-[60%]">
            <% let totalBill = 0 %>
            <% cart.forEach((product)=>{ %>
                <% totalBill+= Number(product.price) %>
                <div class="flex justify-between p-2 gap-3">
                    <div class="w-[50%] rounded-md overflow-hidden">
                        <div class="w-full h-80 bg-[<%= product.bgcolor%>] flex justify-center items-center">
                            <img src="data:image/jpeg;base64,<%=product.image.toString('base64')%>" class="h-[15rem]" alt="">
                        </div>
                        <div class="w-full flex justify-between px-5 py-4 bg-[<%= product.panelcolor%>]">
                            <h3 class="text-2xl text-[<%= product.textcolor%>]"><%= product.name%></h3>
                            <div class="flex items-center gap-2">
                                <!-- <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i> -->
                                <!-- <div class="px-2 py-1 rounded-md bg-white text-black">01</div> -->
                                <!-- <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i> -->
                            </div>
                        </div>
                        
                    </div>
                    <div class="w-[50%] bg-red-200 rounded-md p-2">
                        <a class="relative left-[335px]" href="/removefromcart/<%= product._id %>">X</a>
                        <div class="w-full p-5 flex flex-col ">
                            <div class="flex justify-between text-xl">
                                <h3>Product Name</h3>
                                <h3><%= product.name %></h3>
                            </div>
                            <div class="flex justify-between text-sm text-slate-700 mb-5">
                                <h3>Seller Name</h3>
                                <h3>Saha Enterprise</h3>
                            </div>
                            <div class="flex justify-between text-xl">
                                <h3>Product Price</h3>
                                <h3>₹ <%= product.price%> </h3>

                            </div>
                        </div>
    
                    </div>
                    
    
                </div>
    
    
            <% }) %>
        </div>
        <div class="w-[40%]">
            <div class="w-full px-5 py-10">
                <h3 class="text-xl">Price Breakdown</h3>
                <div class="px-10 mt-5">
                    <div class="flex gap-2 justify-between mt-2">
                        <h4 class="w-1/2 ">Total MRP</h4>
                        <h4>₹<%= totalBill %></h4>
                    </div>
                    <div class="flex gap-2 justify-between mt-2">
                        <h4 class="w-1/2">Discount on MRP</h4>
                        <h4>₹ 0</h4>
                    </div>
                    <div class="flex gap-2 justify-between mt-2">
                        <h4 class="w-1/2">Platform Fee</h4>
                        <h4>₹ 20</h4>
                    </div>
                    <div class="flex gap-2 justify-between mt-2">
                        <h4 class="w-1/2">Shipping Fee</h4>
                        <h4>FREE</h4>
                    </div>
                </div>
                <div class="w-full h-[1px] bg-black mt-10"></div>
                <div class="flex p-2 justify-between mt-5">
                    <h3 class="w-1/3 text-xl">Total Amount</h3>

                    <% if(totalBill === 0){ %>
                        <h3 class="font-semibold text-xl text-green-600">₹<%= totalBill %>   </h3>

                    <% }else{ %>
                        <h3 class="font-semibold text-xl text-green-600">₹<%= totalBill+20 %>   </h3>



                    <% } %>


                </div>
                
            </div>
        </div>

        
    </div>
    <%- include('./partials/footer') %>