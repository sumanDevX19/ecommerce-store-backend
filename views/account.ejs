<%- include('./partials/header') %>

<div class="w-full h-screen flex justify-center items-center">
    <div class="bg-white  p-8 rounded-lg shadow-md w-96 mx-auto my-auto">
        <h1 class="text-2xl font-bold text-center mb-6">Account Information</h1>
        <form action="/users/update-account/<%= user._id%>" method="POST" class="space-y-4">
            <div class="flex flex-col">
                <label for="name" class="text-gray-700 font-medium">Name:</label>
                <input type="text" id="name" name="name" value="<%= user.fullname %>" 
                    class="mt-1 p-2 border rounded-md w-full focus:ring focus:ring-blue-300">
            </div>
            <div class="flex flex-col">
                <label for="email" class="text-gray-700 font-medium">Email:</label>
                <input type="text" id="email" name="email" value="<%= user.email %>" 
                    class="mt-1 p-2 border rounded-md w-full focus:ring focus:ring-blue-300">
            </div>
            
            <button type="submit" 
                class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600 transition">Update</button>
        </form>
        <a href="/users/logout" 
            class="block text-center mt-4 text-red-500 ">Logout</a>
    </div>

</div>



